@model List<Entity.EntityFramework.DONHANG>
@{
    ViewBag.Title = "Invoid";
    Layout = "~/Areas/Webmaster/Views/Shared/_LayoutWebmaster.cshtml";
}

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Tables
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard </a>
                    </li>
                    <li class="active">
                        <i class="fa fa-male"></i> Customer
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-6">
                <h2>Bảng Hóa Đơn</h2>
                <form class="form-inline my-2 my-lg-0 mr-lg-2">
                    <div class="input-group">
                        <input class="form-control" type="text" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã Bài Đăng</th>
                                <th>Merchant</th>
                                <th>Ngày Đăng</th>
                                <th>Sản Phẩm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MADH</td>
                                    <td>@item.MACUSTOMER</td>
                                    <td>@item.NGAYMUA</td>
                                    <td>@item.TONGTIEN</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

