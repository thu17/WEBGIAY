@model List<Entity.EntityFramework.MERCHANT>
@{
    ViewBag.Title = "listtaikhoanbikhoa";
    Layout = "~/Areas/Merchant/Views/Shared/_LayoutWebmaster.cshtml";
}
@section Navigation
{
    @Html.Partial("~/Areas/Webmaster/Views/navigationW.cshtml");
}


<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="">Danh sách tài khoản bị khóa chức năng đăng tin</a>
    </li>
</ol>
<ol>
    <div class="row">
        <table>
           
        </table>
    </div>
</ol>
<ol>    
    <div class="col-lg-12">
        <hr />
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="font-size:13px">
                <thead>
                    <tr>
                        <th width="20">ID</th>
                        <th>Tên nhà bán hàng</th>
                        <th>Tên đăng nhập</th>
                        <th>Ngày đăng kí</th>
                        <th>Email</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th width="20">Đánh giá</th>
                        <th width="20">Số tin còn lại</th>                        
                        <th width="20">Số lần khóa</th>
                        <th width="50">Kích hoạt lại</th>
                    </tr>
                </thead>
                <tbody id="data">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MAMERCHANT</td>
                            <td>@item.TENMERCHANT</td>
                            <td>@item.TENDANGNHAP</td>
                            <td>@item.NGAYDK</td>
                            <td>@item.EMAIL</td>
                            <td>@item.DIACHI</td>
                            <td>@item.SDT</td>
                            <td>@item.RATING</td>
                            <td>@item.SOTINHIENTAI</td>
                            <td>@item.SOLANBIKHOA</td>
                            <td><button class="btn-primary"  onclick=active(@item.MAMERCHANT)>Kích hoạt</button></td>
                        </tr>
                    }
                </tbody>              
            </table>
        </div>
    </div>

</ol>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    active= function(id)
    {
        $.ajax({
            type: "post",
            url: "/Webmaster/quanlimer/activetaikhoan",
            data: { idmer: id },
            error:function(err)
            {
                alert(err.statusText);
            },
            success: function (code) { if (code == 1) location.reload();}
        });
    }
</script>
