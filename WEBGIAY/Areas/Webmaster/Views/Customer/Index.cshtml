@model WEBGIAY.Areas.Customer.Models.CUSTOMER_REGISTERViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Webmaster/Views/Shared/_LayoutWebmaster.cshtml";
}

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Tables
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard </a>
                    </li>
                    <li class="active">
                        <i class="fa fa-male"></i> Customer
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row" style="width:170%" >
            <div class="col-lg-6">
                <h2>Bảng Customer</h2>
                <form class="form-inline my-2 my-lg-0 mr-lg-2" id="id03">
                    <div class="input-group" style="width:35%" >
                        <input class="form-control" type="text" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Mã Customer</th>
                                <th>Tên</th>
                                <th>Ngày Đăng Ký</th>
                                <th>Email</th>
                                <th>Rating</th>
                                <th>tình Trạng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CUSTOMER)
                            {
                                <tr>
                                    <td onclick="document.getElementById('@item.MACUSTOMER').style.display = 'block'; document.getElementById('id03').style.display = 'none'" style="width:auto;">@item.MACUSTOMER</td>
                                    <td>@item.TENCUSTOMER</td>
                                    <td>@item.NGAYDK</td>
                                    <td>@item.EMAIL</td>
                                    <td>@item.RATING</td>
                                    <td>@item.TINHTRANG</td>
                                    <td id="@item.MACUSTOMER" class="modal" >

                                        <form class="modal-content animate " action="/action_page.php">
                                            <div class="container">
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Tên Customer </li>
                                                    <li>@item.TENCUSTOMER</li>
                                                </ul>
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Ngày Đăng Ký </li>
                                                    <li>@item.NGAYDK</li>
                                                </ul>
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Ngày Sinh </li>
                                                    <li>@item.NGAYSINH</li>
                                                </ul>
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Email: </li>
                                                    <li>@item.EMAIL</li>
                                                </ul>
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Số điện thoại: </li>
                                                    <li>@item.SDT</li>
                                                </ul>
                                                <ul onmousedown="document.getElementById('@item.MACUSTOMER').style.display = 'none'; document.getElementById('id03').style.display = 'block'">
                                                    <li class="text-info">Địa chỉ</li>
                                                    <li>@item.DIACHI</li>
                                                </ul>
                                                <ul>
                                                    <li class="text-info">Mật khẩu</li>
                                                    <li onclick="document.getElementById('id04').style.display = 'block'">@item.MATKHAU</li>
                                                    <li id="id04" class="modal" style="width:50% ; height:70%">
                                                        <form class="modal-content animate" action="/action_page.php">
                                                            <div class="imgcontainer">
                                                                <span onclick="document.getElementById('id04').style.display = 'none'; document.getElementById('id03').style.display = 'none'" class="close" title="Close Modal">&times;</span>
                                                            </div>
                                                            <div class="container" style="width:50% ; ">
                                                                <ul>
                                                                    <li class="text-info">Mật khẩu </li>
                                                                    <li>@Html.PasswordFor(model => model.MATKHAU)</li>
                                                                    @Html.ValidationMessageFor(model => model.MATKHAU)
                                                                </ul>
                                                                <ul>
                                                                    <li class="text-info">Nhập lại mật khẩu:</li>
                                                                    <li>@Html.PasswordFor(model => model.MATKHAUNHAPLAI)</li>
                                                                    @Html.ValidationMessageFor(model => model.MATKHAUNHAPLAI)
                                                                </ul>
                                                                <ul style="padding-top:10%">
                                                                    <input type="submit" value="Xác Nhận">
                                                                </ul>

                                                            </div>
                                                        </form>
                                                    </li>
                                                </ul>
                                                <ul>
                                                    <li class="text-info">Tình Trạng</li>
                                                    <li>@item.TINHTRANG</li>
                                                </ul>
                                                <ul>
                                                    <li class="text-info">Rating</li>
                                                    <li>@item.RATING</li>
                                                </ul>

                                            </div>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <button onclick="document.getElementById('id01').style.display = 'block'; document.getElementById('id03').style.display = 'none'" style="width:auto;">Thêm</button>
                <div id="id01" class="modal" style="width:40%" align-content:center">
                    @Html.ValidationSummary()
                    @if (ViewBag.Success != null)
                    {
                        <p class="alert alert-success">@ViewBag.Success</p>
                    }
                    @using (@Html.BeginForm("Index", "Customer", FormMethod.Post))
                    {
                        <form class="modal-content animate" action="/action_page.php">
                            <div class="imgcontainer">
                                <span onclick="document.getElementById('id01').style.display = 'none'" class="close" title="Close Modal">&times;</span>
                            </div>

                            <div class="container" style="width:50%;align-content:center">
                                <ul>
                                    <li class="text-info">Tên đăng nhập </li>
                                    <li>@Html.TextBoxFor(model => model.TENCUSTOMER)</li>
                                    @Html.ValidationMessageFor(model => model.TENCUSTOMER)
                                </ul>
                                <ul>
                                    <li class="text-info">Mật khẩu </li>
                                    <li>@Html.PasswordFor(model => model.MATKHAU)</li>
                                    @Html.ValidationMessageFor(model => model.MATKHAU)
                                </ul>
                                <ul>
                                    <li class="text-info">Nhập lại mật khẩu:</li>
                                    <li>@Html.PasswordFor(model => model.MATKHAUNHAPLAI)</li>
                                    @Html.ValidationMessageFor(model => model.MATKHAUNHAPLAI)
                                </ul>
                                
                                <ul>
                                    <li class="text-info">Ngày Sinh </li>
                                    <li>@Html.TextBoxFor(model => model.NGAYSINH)</li>
                                    @Html.ValidationMessageFor(model => model.NGAYSINH)
                                </ul>
                                <ul>
                                    <li class="text-info">Số điện thoại: </li>
                                    <li>@Html.TextBoxFor(model => model.SDT)</li>
                                    @Html.ValidationMessageFor(model => model.SDT)
                                </ul>
                                <ul>
                                    <li class="text-info">Email: </li>
                                    <li>@Html.TextBoxFor(model => model.EMAIL)</li>
                                    @Html.ValidationMessageFor(model => model.EMAIL)
                                </ul>
                                <ul>
                                    <li class="text-info">Địa chỉ</li>
                                    <li>@Html.TextBoxFor(model => model.DIACHI)</li>
                                    @Html.ValidationMessageFor(model => model.DIACHI)
                                </ul>
                                <input type="submit" value="Khởi Tạo">
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

